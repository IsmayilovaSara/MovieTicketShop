@{
}
<form method="post">
    <h3 class="mb-5">AddProduct</h3>


    <div class="form-outline mb-4">
        <input type="text" placeholder="Name" class="form-control form-control-lg" name="Name" />
    </div>

    <div class="form-outline mb-4">
        <input type="text" placeholder="Price"  class="form-control form-control-lg" name="Price" />
    </div>

      <div class="form-outline mb-4">
        <input type="text" placeholder="IMDb Rating"  class="form-control form-control-lg" name="IMDbRating"/>
    </div>

    <div class="form-outline mb-4">
        <input type="text" placeholder="Image Path"  class="form-control form-control-lg" name="ImgPath"/>
    </div>

    <div class="form-outline mb-4">
        <input type="text" placeholder="Note" class="form-control form-control-lg" name="Note" />
    </div>



    <button class="btn btn-primary btn-lg btn-block mb-4" type="submit"
            asp-controller="AdminProduct" asp-action="Add">
        Add
    </button>

    <partial name="~/Views/Shared/Message.cshtml" />

    <div class="form-outline mb-4">
        Don't have account? <a class="form-label" asp-controller="Login"
                               asp-action="SignUp">Sign Up</a>
    </div>
</form>
